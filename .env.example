# 한국투자증권 OpenAPI 설정
KIS_APP_KEY=your_app_key_here
KIS_APP_SECRET=your_app_secret_here
KIS_ACCOUNT_NUMBER=your_account_number_here
KIS_BASE_URL=https://openapi.koreainvestment.com:9443

# 데이터베이스 설정 (Docker Compose 내부에서 자동 설정됨)
DATABASE_URL=postgresql+asyncpg://stockuser:stockpass@postgres:5432/stocktheme

# Redis 설정 (Docker Compose 내부에서 자동 설정됨)
REDIS_URL=redis://redis:6379/0

# 서버 환경
ENVIRONMENT=development

# JWT Secret Key (향후 사용자 인증용)
SECRET_KEY=your-secret-key-change-this-in-production

# CORS 설정 (프로덕션에서는 HTTPS 도메인으로 변경)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,https://stock.hayoone.com
